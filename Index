<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teste de Câmera</title>
    <style>
        body { font-family: sans-serif; display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; text-align: center; font-size: 1.2rem; }
        button { padding: 15px 25px; font-size: 1.2rem; cursor: pointer; }
        #status { margin-top: 20px; font-weight: bold; }
        video { margin-top: 20px; border: 2px solid black; max-width: 90%; }
    </style>
</head>
<body>
    <button id="startButton">Testar Câmera</button>
    <p id="status">Clique no botão para iniciar o teste.</p>
    <video id="videoPlayer" playsinline autoplay></video>

    <script>
        const startButton = document.getElementById('startButton');
        const statusEl = document.getElementById('status');
        const videoPlayer = document.getElementById('videoPlayer');

        startButton.addEventListener('click', async () => {
            statusEl.textContent = 'Solicitando permissão...';
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' } });
                statusEl.textContent = 'Permissão Concedida! Câmera Ativa.';
                videoPlayer.srcObject = stream;
            } catch (err) {
                console.error("Erro no getUserMedia:", err);
                statusEl.textContent = `ERRO: ${err.name} - ${err.message}`;
            }
        });
    </script>
</body>
</html>
